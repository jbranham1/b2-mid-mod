<% @mechanic.open_rides.each do |ride| %>
<p><%= ride.name %></p>
<% end %>


<%= form_with url: "/mechanics/#{@mechanic.id}/rides", method: :post,local: true do |f|%>
  <h2>Add a ride to workload:</h2>
  <%= f.hidden_field :mechanic_id, value: @mechanic.id %>
  <%= f.label :ride_id %>
  <%= f.number_field :ride_id%><br>
  <%= f.submit 'Submit' %>
<% end %>
